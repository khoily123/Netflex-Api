@model Netflex.Models.User.UserViewModels

@{
    ViewData["Title"] = "Create User";
    Layout = "_AdminLayout";
}

<h1 class="text-center text-dark">Edit User</h1>

<h4 class="text-center text-muted">TblUser</h4>
<hr />

<div class="row">
    <div class="col-md-8 offset-md-2">
        <!-- Card với màu sắc đen và xám, viền sáng -->
        <div class="card border-light shadow-lg">
            <div class="card-header bg-dark text-white">
                <strong>Edit Blog</strong>
            </div>
            <div class="card-body bg-light">
                <form method="POST" enctype="multipart/form-data" asp-controller="blogmanagement" asp-action="edit">

                    <div class="form-group mb-4">
                        <label asp-for="UserName" class="control-label text-dark">UserName</label>
                        <input asp-for="UserName" class="form-control border-dark" placeholder="Enter blog title" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Email" class="control-label text-dark">Email</label>
                        <textarea asp-for="Email" id="tiny" class="form-control border-dark"
                            placeholder="Enter blog content"></textarea>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="PhoneNumber" class="control-label text-dark">PhoneNumber</label>
                        <input asp-for="PhoneNumber" class="form-control border-dark"/>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="AvailableRoles" class="control-label text-dark">CreAvailableRolesator</label>
                        <select asp-for="AvailableRoles" class="form-control border-dark" asp-items="ViewBag.AvailableRoles"
                            id="CreaterIdDropdown">
                            <option value="">-- Select Creator --</option>
                        </select>
                        <span asp-validation-for="AvailableRoles" class="text-danger"></span>
                    </div>

                    <!-- Nút Save -->
                    <div class="form-group text-center mb-4">
                        <input type="submit" value="Save" class="btn btn-lg btn-dark text-light" />
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var createrDropdown = document.getElementById("CreaterIdDropdown");
            var createrNameInput = document.getElementById("CreaterName");

            var createrData = @Html.Raw(Json.Serialize(ViewBag.CreaterList));

            createrDropdown.addEventListener("change", function () {
                var selectedId = createrDropdown.value;
                createrNameInput.value = createrData[selectedId] || "";
            });

            var initialId = createrDropdown.value;
            createrNameInput.value = createrData[initialId] || "";
        });
    </script>
}
