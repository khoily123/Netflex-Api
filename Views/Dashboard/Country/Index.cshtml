@model X.PagedList.IPagedList<Netflex.Entities.Country>
@using X.PagedList.Mvc;
@{
    Layout = "_AdminLayout";
}
<h2>Danh sách Quốc gia</h2>

<form method="get" class="mb-3">
    <div class="input-group" style="width: 300px;">
        <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control"
            placeholder="Tìm kiếm quốc gia..." />
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </div>
</form>

<a asp-action="Create" class="btn btn-success mb-3">
    <i class="fa-solid fa-plus"></i> Thêm mới</a>

<div class="table-responsive">
    <table class="table text-start align-middle table-bordered table-hover mb-0">
        <thead>
            <tr class="text-dark">
                <th>Tên Quốc gia</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var country in Model)
            {
                <tr>
                    <td>@country.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@country.Id" class="btn btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@country.Id" class="btn btn-danger"
                            onclick="return confirmDelete();">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="row">
    <!-- Pagination -->
    <div class="d-flex justify-content-start mt-4">
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber - 1 })">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Previous</span>
                </li>
            }

            @for (var i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber + 1 })">Next</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Next</span>
                </li>
            }
        </ul>
    </div>
</div>
<script type="text/javascript">
    function confirmDelete() {
        return confirm("Bạn có đồng ý xóa diễn viên này không?");
    }
</script>
