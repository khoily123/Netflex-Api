@model IPagedList<FilmViewModel>

@{
    ViewData["Title"] = "Create movie";
    Layout = "_Layout";
}
<p>
    <a asp-controller="film" asp-action="create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Poster</th>
            <th>Trailer</th>
            <th>ProductionYear</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Title, "detail", "film", new { id = item.Id })
                </td>
                <td>
                    <img src="@item.Poster" class="img-thumbnail" alt="this is a poster"
                        style="width: 100px; height: 100px; object-fit: cover;">
                </td>
                <td>
                    <a href="@item.Trailer" target="_blank">Link</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionYear)
                </td>
                <td>
                    @Html.ActionLink("Edit", "edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions()
{
    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
    DisplayLinkToNextPage = PagedListDisplayMode.Always,
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }
})
</div>