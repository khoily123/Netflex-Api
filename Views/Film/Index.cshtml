@model IPagedList<FilmViewModel>
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "Phim lẻ";
    Layout = "_Layout";
}

<div class="container">
    <h2 class="text-white text-center mt-3">Phim lẻ</h2>

    <div id="highlightCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (var i = 0; i < Model.Count(); i += 2)
            {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="row">
                            @for (var j = 0; j < 2 && (i + j) < Model.Count(); j++)
                            {
                                    var film = Model[i + j];
                                    <div class="col-md-6">
                     <a href="@Url.Action("Detail", "Film", new { id = film.Id })" class="text-decoration-none">

                                        <div class="position-relative">
                                            <img src="@film.Poster" class="img-6x9 rounded" alt="@film.Title">
                                            <div class="carousel-caption text-start">
                                                <h5 class="">@film.Title</h5>
                                                <h6 class="">@film.ProductionYear</h6>
                                            </div>
                                            @* <span class="badge bg-primary position-absolute bottom-0 start-0 m-2">HD VIETSUB</span> *@
                                        </div>
                     </a>
                                    </div>
                            }
                        </div>
                    </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#highlightCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#highlightCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <h4 class="text-white mt-4 mb-4">Phim lẻ mới cập nhật</h4>
    <div class="row">
        @foreach (var film in Model)
        {
                <div class="col-md-2 mb-4">
                     <a href="@Url.Action("Detail", "Film", new { id = film.Id })" class="text-decoration-none">
                    <div class="position-relative">
                        <img src="@film.Poster" class="img-6x9 rounded" alt="@film.Title">
                        @* <span class="badge bg-primary position-absolute bottom-0 start-0 m-2">HD VIETSUB</span> *@
                    </div>
                    <p class="text-white text-truncate mt-2" style="max-width: 100%;">@(film.Title.Length > 20 ? film.Title.Substring(0, 20) + "..." : film.Title)</p>
                    </a>
                </div>
        }
    </div>

    <!-- Phân trang -->
    <nav class="d-flex justify-content-center mt-3">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
        {
                LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" }
                })
    </nav>
</div>
