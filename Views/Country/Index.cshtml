@model X.PagedList.IPagedList<Netflex.Entities.Country>
@using X.PagedList.Mvc;

<h2>Danh sách Quốc gia</h2>

<form method="get" class="mb-3">
    <div class="input-group" style="width: 300px;">
        <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control" placeholder="Tìm kiếm quốc gia..." />
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </div>
</form>

<a asp-action="Create" class="btn btn-success mb-3">Thêm mới</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên Quốc gia</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
            <tr>
                <td>@country.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@country.Id" class="btn btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@country.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center mt-3">
    <style>
        .pagination li {
            margin-right: 5px;
        }
    </style>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewBag.SearchString }))
</div>