@model IPagedList<Netflex.Models.Notification.NotificationViewModel>

@{
    ViewData["Title"] = "Notification";
    Layout = "_Layout";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center my-3">
        <div class="d-flex align-items-center">
            <div class="vertical-line"></div>
            <p class="ms-2 mb-0 text-md text-white-smoke fw-bold">Thông báo</p>
        </div>
    </div>
    <div class="row mb-3">
        @foreach (var noti in Model)
        {
            <a class="col-12 notification text-white-50" href="@noti.Link">
                <p class="text-base @(noti.HaveRead ? "" : "text-white-70")">NETFLEX: @noti.Message</p>
                <div class="text-sm">@noti.CreatedAt.ToString("MMMM d, yyyy")</div>
            </a>
        }
    </div>

    <div class="row">
        <nav class="text-sm">
            <ul class="pagination d-flex gap-2">
                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("index", new { page = Model.PageNumber - 1 })">‹</a>
                </li>

                @if (Model.PageCount <= 5)
                {
                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action("index", new { page = i })">@i</a>
                        </li>
                    }
                }
                else
                {
                    <li class="page-item @(1 == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="@Url.Action("index", new { page = 1 })">1</a>
                    </li>

                    @if (Model.PageNumber > 3)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }

                    @for (int i = Math.Max(2, Model.PageNumber - 1); i <= Math.Min(Model.PageCount - 1, Model.PageNumber +
                   1); i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action("index", new { page = i })">@i</a>
                        </li>
                    }

                    @if (Model.PageNumber < Model.PageCount - 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }

                    <li class="page-item @(Model.PageCount == Model.PageNumber ? "active" : "")">
                        <a class="page-link"
                            href="@Url.Action("index", new { page = Model.PageCount })">@Model.PageCount</a>
                    </li>
                }

                <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("index", new { page = Model.PageNumber + 1 })">›</a>
                </li>
            </ul>
        </nav>
    </div>
</div>