@model IEnumerable<Netflex.Models.Blog.BlogViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .title-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .vertical-line {
        width: 5px;
        height: 40px;
        background-color: #00aaff;
        margin-right: 15px;
    }

    .text-light {
        font-size: 2em;
        color: #fff;
    }

    .btn-link {
        color: #fff;
        /* Keeps the button text color white */
        text-decoration: none;
        /* Remove underline */
        font-size: 1.2em;
        /* Optional: Set button font size */
    }

    .btn-link:hover {
        text-decoration: underline;
        /* Optional: Underline on hover */
    }
</style>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="title-container d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
        <div class="vertical-line"></div>
        <h1 class="text-light ml-3">Tin tức</h1>
    </div>
    <a href="@Url.Action("Index", "Blog")" class="btn btn-link text-light">Xem thêm</a>
</div>



<div class="container">
    @foreach (var blog in Model)
    {
        <div class="row align-items-center border-bottom py-3" style="background-color: rgba(15, 15, 15, .9);">
            <div class="col-md-2 text-center text-light">
                <h2 class="fw-bold" style="color:aliceblue">@blog.CreatedAt.Day</h2>
                <small class="d-block text-uppercase" style="color:grey;">
                    @blog.CreatedAt.ToString("MMMM")
                </small>
            </div>

            <div class="col-md-8">
                <a href="@Url.Action("Details", "Blog", new { id = blog.Id })">
                    <h3 class="fw-bold" style="color:aliceblue">
                        @Html.Raw(blog.Title.Length > 50 ? blog.Title.Substring(0, 50) + "..." : blog.Title)
                    </h3>
                </a>
                <p class="card-text" style="color: rgb(0, 81, 255);">
                    <strong>@blog.CreatorName</strong>
                </p>
                <p class="card-text text-muted">
                    @blog.CreatedAt.ToString("dd/MM/yyyy")
                </p>
                <p class="text-light">
                    @Html.Raw(blog.Content.Length > 200 ? blog.Content.Substring(0, 200) + "..." : blog.Content)
                </p>

            </div>

            <div class="col-md-2">
                <img src="@blog.Thumbnail" alt="Thumbnail" class="img-thumbnail bg-dark border border-dark">
            </div>
        </div>
    }
</div>