<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="AgeCategory" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="AgeCategory" asp-action="Delete" asp-route-id="@item.Id" 
                    onclick="return confirm('Are you sure delete this item?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

